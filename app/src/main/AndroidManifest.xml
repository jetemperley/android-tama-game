<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tama">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.tama.core.GameActivity"
            android:parentActivityName="com.tama.core.MainActivity">
        </activity>

        <!-- meta data for linking the back button to previous activity -->
        <activity
            android:name="com.tama.core.DisplayMessageActivity"
            android:parentActivityName="com.tama.core.MainActivity">

            <!-- meta data used in older android versions -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tama.core.MainActivity" />
        </activity>
        <activity android:name="com.tama.core.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>